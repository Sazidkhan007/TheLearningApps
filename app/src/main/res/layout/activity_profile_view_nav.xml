<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LeaderBoard">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <TextView
            android:id="@+id/headerProfile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:keepScreenOn="true"
            android:textColor="#4B6868"
            android:background="@color/nliveo_blue_alpha_colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/bg1"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="12dp"
                android:fadingEdgeLength="5dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/profileNavigation"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chanchu" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/nameNavigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:fontFamily="serif-monospace"
                android:text="Sazid Khan"
                android:textColor="@color/graylight"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/first_card"
            android:layout_width="335dp"
            android:layout_height="85dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="207dp"
            app:cardBackgroundColor="@color/graylight">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_home_black_24dp" />

                <TextView
                    android:id="@+id/college_nameNavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:text="College name"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/id" />

                <TextView
                    android:id="@+id/yearNavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Year of College"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/contact" />

                <TextView
                    android:id="@+id/contactNavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Conatact info"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="43dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/email" />

                <TextView
                    android:id="@+id/emailNavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="75dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/id" />

                <TextView
                    android:id="@+id/cityNavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:text="City"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="105dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/scores" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pointNavigation"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Scores"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/scoresNavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="195dp"
                    android:fontFamily="sans-serif"
                    android:text="350"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>




    </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"

            android:clickable="true"
            android:focusable="true"
            android:onClick="editProfile"
            android:outlineSpotShadowColor="@color/nliveo_black"
            android:src="@drawable/floating_btn"
            app:rippleColor="@color/nliveo_black" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bot_navigation"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"

            android:background="#37474F"
            app:itemIconTint="@color/nliveo_white"
            app:itemTextColor="@color/nliveo_white"

            android:layout_height="wrap_content"
            app:menu="@menu/navigation" />





    </LinearLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:onClick="leader"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="80dp"
        android:src="@mipmap/leaderboard"
        android:text="To switch to LeaderBoard" />




</FrameLayout>
