<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_forum"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/fui_idp_button_background_twitter"
    android:elevation="15dp"
    android:fadingEdgeLength="8dp"
    card_view:cardCornerRadius="13dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            card_view:cardCornerRadius="40dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/chanchu"
                android:id="@+id/dpForum"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>


        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/nameForum"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Bucky Roberts"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />


    </android.support.v7.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/timeForum"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Time"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:id="@+id/forumHead"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="22dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleAlterForum"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:layout_marginTop="14dp"
            android:id="@+id/forumText"
            android:textSize="16dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:id="@+id/totalLike"
                android:text="like"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:onClick="likeForum"
                android:id="@+id/forumLike"
                android:src="@drawable/forum_lik" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:id="@+id/forumReply"
                android:layout_marginLeft="20dp"
                android:src="@drawable/reply" />
        </LinearLayout>

    </LinearLayout>





</android.support.v7.widget.CardView>
