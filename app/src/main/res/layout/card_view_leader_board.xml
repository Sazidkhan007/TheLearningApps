<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/fui_idp_button_background_twitter"
    android:elevation="15dp"
    android:fadingEdgeLength="5dp"
    card_view:cardCornerRadius="13dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            card_view:cardCornerRadius="40dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/chanchu"
                android:adjustViewBounds="true"
                android:id="@+id/dpToppers"
                android:scaleType="fitCenter"/>


        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/leaderName"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Bucky Roberts"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Points"
            android:id="@+id/leaderPoints"
            android:textSize="20dp"/>

    </android.support.v7.widget.LinearLayoutCompat>



</android.support.v7.widget.CardView>
